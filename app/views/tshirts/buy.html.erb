<div class="container">
  <div class="page-header">
    <h1>Buy TShirts</h1>
    <h2>
      <small>For only 2 cents a piece!</small>
    </h2>

  </div>

  <%= form_for @payment_method, as: :data, url: SpreedlyCore.add_payment_method_url do |f| %>
    <%= error_messages_for object: [ @payment_method, @payment_method.credit_card ] %>
    <%= render 'tshirts/hidden_form_fields' %>

    <div class="row-fluid">
      <div class="span8">
        <%= render 'tshirts/how_many', f: f %>
        <%= render "tshirts/credit_card_fields" %>
        <%= render "tshirts/other_payment_methods" %>
      </div>
    </div>

  <% end %>

</div>
