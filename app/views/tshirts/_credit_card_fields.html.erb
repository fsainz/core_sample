<div id="credit_card_form" class="<%= @paying_with_credit_card ? nil : 'hidden' %>">
  <%= fields_for @payment_method.credit_card, as: :credit_card do |f| %>
    <div class="row-fluid">
      <div class="span3">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: "span12" %>
      </div>

      <div class="span3">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: "span12" %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span3">
        <%= f.label :number, "Card Number" %>
        <%= f.text_field :number, class: "span12" %>
      </div>

      <div class="span2">
        <%= f.label :verification_value, "CVV" %>
        <%= f.text_field :verification_value, class: "span12" %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span3">
        <%= f.label :month, "Expiration" %>
        <%= f.text_field :month, placeholder: "Month", class: "span12" %>
      </div>
      <div class="span2">
        <%= f.label :year, "&nbsp;".html_safe %>
        <%= f.text_field :year, placeholder: "Year", class: "span12" %>
      </div>
    </div>

    <br/>
    <button type="submit" class="btn btn-primary" id="revealed_pay_with_card_button">Purchase</button>
  <% end %>

</div>

<%= link_to "Pay via Credit Card", '#', id: "original_pay_with_card_button", class: "btn #{@paying_with_credit_card ? 'hidden' : nil}" %>

